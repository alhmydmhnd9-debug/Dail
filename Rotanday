        function convertTo12Hour(time24) {
            let [hours, minutes] = time24.split(':');
            hours = parseInt(hours);
            const suffix = hours >= 12 ? 'م' : 'ص';
            hours = hours % 12 || 12;
            return `${hours.toString().padStart(2, '0')}:${minutes} ${suffix}`;
        }

