        function displayDate() {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const today = new Date().toLocaleDateString('ar-SA', options);
            document.getElementById('dateDisplay').textContent = today;
        }

        function getSuggestion(type) {
            switch(type) {
                case 'breakfast':
                    return breakfastOptions[dailyIndex];
                case 'lunch':
                    return lunchOptions[dailyIndex];
                case 'dinner':
                    return dinnerOptions[dailyIndex];
                case 'exercise':
                    return exercises[dailyIndex];
                default:
                    return '';
            }
        }

        function renderSchedule() {
            const scheduleDiv = document.getElementById('schedule');
            scheduleDiv.innerHTML = '<h2 style="color: #667eea; margin-bottom: 20px;">📅 الجدول اليومي</h2>';
            
            let taskCounter = 0;
            
            dailySchedule.forEach((item, index) => {
                const taskDiv = document.createElement('div');
                taskDiv.className = 'task';
                taskDiv.id = `task-${index}`;
                
                let content = `
                    <div class="task-header">
                        <div>
                            <div class="task-time">${item.time}</div>
                            <div class="task-title">${item.title}</div>
                        </div>
                        <div class="checkbox-container">
                            <input type="checkbox" class="checkbox" onchange="toggleTask(${index})">
                            <span>تم</span>
                        </div>
                    </div>
                    <div style="color: #666;">${item.task}</div>
                `;
                
                if (item.type) {
                    const suggestion = getSuggestion(item.type);
                    content += `
                        <div class="task-suggestion">
                            <span class="suggestion-label">💡 اقتراح اليوم:</span>
                            <div style="color: #333;">${suggestion}</div>
                        </div>
                    `;
                }
                
                if (item.phone) {
                    content += `<div style="margin-top: 8px; color: #e74c3c; font-weight: bold;">📱 يشمل استخدام الجوال</div>`;
                }
                
                taskDiv.innerHTML = content;
                scheduleDiv.appendChild(taskDiv);
                
                taskCounter++;
                
                // إضافة رسائل تحفيزية بعد مهام معينة
                if (taskCounter === 5) {
                    const motivation = document.createElement('div');
                    motivation.className = 'task';
                    motivation.style.background = 'linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%)';
                    motivation.style.borderRight = '5px solid #4caf50';
                    motivation.innerHTML = `
                        <div style="text-align: center; padding: 15px;">
                            <div style="font-size: 2em;">⚡</div>
                            <div style="font-size: 1.4em; font-weight: bold; color: #2c3e50; margin: 10px 0;">
                                فخورين بإنجازك يا مهندس!
                            </div>
                            <div style="color: #34495e; font-size: 1.1em;">
                                بدأت يومك بقوة، استمر على هذا المستوى
                            </div>
                        </div>
                    `;
                    scheduleDiv.appendChild(motivation);
                } else if (taskCounter === 10) {
                    const motivation = document.createElement('div');
                    motivation.className = 'task';
                    motivation.style.background = 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)';
                    motivation.style.borderRight = '5px solid #9b59b6';
                    motivation.innerHTML = `
                        <div style="text-align: center; padding: 15px;">
                            <div style="font-size: 2em;">🎯</div>
                            <div style="font-size: 1.4em; font-weight: bold; color: #2c3e50; margin: 10px 0;">
                                ممتاز! نصف الطريق
                            </div>
                            <div style="color: #34495e; font-size: 1.1em;">
                                انضباطك يبني مستقبلك الهندسي خطوة بخطوة
                            </div>
                        </div>
                    `;
                    scheduleDiv.appendChild(motivation);
                } else if (taskCounter === 15) {
                    const motivation = document.createElement('div');
                    motivation.className = 'task';
                    motivation.style.background = 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)';
                    motivation.style.borderRight = '5px solid #e67e22';
                    motivation.innerHTML = `
                        <div style="text-align: center; padding: 15px;">
                            <div style="font-size: 2em;">💪</div>
                            <div style="font-size: 1.4em; font-weight: bold; color: #2c3e50; margin: 10px 0;">
                                إنجاز رائع يا بطل!
                            </div>
                            <div style="color: #34495e; font-size: 1.1em;">
                                المهندس الناجح يُبنى بالانضباط اليومي مثلك
                            </div>
                        </div>
                    `;
                    scheduleDiv.appendChild(motivation);
                } else if (taskCounter === 20) {
                    const motivation = document.createElement('div');
                    motivation.className = 'task';
                    motivation.style.background = 'linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%)';
                    motivation.style.borderRight = '5px solid #e91e63';
                    motivation.innerHTML = `
                        <div style="text-align: center; padding: 15px;">
                            <div style="font-size: 2em;">🔥</div>
                            <div style="font-size: 1.4em; font-weight: bold; color: #2c3e50; margin: 10px 0;">
                                أنت مذهل! كاد اليوم ينتهي
                            </div>
                            <div style="color: #34495e; font-size: 1.1em;">
                                تصميمك اليوم أقوى من أي دائرة كهربائية ⚡
                            </div>
                        </div>
                    `;
                    scheduleDiv.appendChild(motivation);
                }
            });
            
            // رسالة تحفيزية نهاية اليوم
            const finalMotivation = document.createElement('div');
            finalMotivation.className = 'task';
            finalMotivation.style.background = 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)';
            finalMotivation.style.borderRight = '5px solid #ffd700';
            finalMotivation.style.border = '3px solid #ffd700';
            finalMotivation.innerHTML = `
                <div style="text-align: center; padding: 20px;">
                    <div style="font-size: 3em;">🏆</div>
                    <div style="font-size: 1.6em; font-weight: bold; color: white; margin: 15px 0;">
                        مبروك يا بطل! أكملت يومك بنجاح
                    </div>
                    <div style="color: white; font-size: 1.2em; margin: 10px 0;">
                        💫 أنت قدوة في الانضباط والالتزام
                    </div>
                    <div style="color: white; font-size: 1.1em; margin-top: 15px; opacity: 0.95;">
                        كل يوم تكمله بهذا الانضباط، تقترب خطوة من أحلامك الهندسية
                    </div>
                    <div style="color: white; font-size: 1.1em; margin-top: 10px; opacity: 0.95;">
                        ⚡ استمر وستصبح المهندس الذي تطمح له
                    </div>
                </div>
            `;
            scheduleDiv.appendChild(finalMotivation);
        }

        function renderExtraTasks() {
            const extraTasksDiv = document.getElementById('extraTasksList');
            extraTasksDiv.innerHTML = '';
            
            extraTasks.forEach((task, index) => {
                const taskDiv = document.createElement('div');
                taskDiv.className = 'extra-task-item';
                taskDiv.id = `extra-${index}`;
                taskDiv.innerHTML = `
                    <span>${task}</span>
                    <input type="checkbox" class="checkbox" onchange="toggleExtraTask(${index})">
                `;
                extraTasksDiv.appendChild(taskDiv);
            });
        }

        function toggleTask(index) {
            const task = document.getElementById(`task-${index}`);
            task.classList.toggle('completed');
            updateProgress();
        }
        
        function updateProgress() {
            const checkboxes = document.querySelectorAll('.schedule .checkbox');
            const completed = Array.from(checkboxes).filter(cb => cb.checked).length;
            const total = checkboxes.length;
            const percentage = (completed / total) * 100;
            
            document.getElementById('progressFill').style.width = percentage + '%';
            document.getElementById('progressText').textContent = `${completed}/${total} مهمة`;
            
            // تحديث النقاط
            const pointsDisplay = document.getElementById('totalPoints');
            if (pointsDisplay) {
                pointsDisplay.textContent = completed;
            }
            
            // رسائل تحفيزية
            if (completed === 5) {
                alert('🎉 ممتاز! أكملت 5 مهام - لك راحة إضافية 15 دقيقة!');
            } else if (completed === 10) {
                alert('🎯 رائع! 10 مهام - يمكنك مشاهدة حلقة أو فيلم قصير!');
            } else if (completed === 15) {
                alert('🍕 إنجاز عظيم! 15 مهمة - اطلب وجبتك المفضلة!');
            } else if (completed === total) {
                alert('⭐ مبروووك! أكملت يومك كاملاً - أنت مهندس منضبط حقاً! 🏆');
            }
        }

        function toggleExtraTask(index) {
            const task = document.getElementById(`extra-${index}`);
            task.style.opacity = task.style.opacity === '0.5' ? '1' : '0.5';
        }

        function refreshSuggestions() {
            dailyIndex = (dailyIndex + 1) % 7;
            renderSchedule();
            alert('✨ تم تغيير الاقتراحات اليومية!');
        }

        displayDate();
        renderSchedule();
        renderExtraTasks();
        
        // إضافة مستمعي الأحداث للـ checkboxes
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('checkbox')) {
                updateProgress();
            }
        });
    </script>
</body>
</html>
